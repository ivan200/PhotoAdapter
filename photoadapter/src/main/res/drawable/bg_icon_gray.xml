<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <selector android:exitFadeDuration="@android:integer/config_shortAnimTime">
        <item
            android:state_pressed="false">
            <shape android:shape="rectangle">
                <solid android:color="@color/color_circle_icon_normal" />
                <corners android:radius="@dimen/size_icon_radius" />
            </shape>
        </item>
        <item
            android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="@color/color_circle_icon_pressed" />
                <corners android:radius="@dimen/size_icon_radius" />
            </shape>
        </item>
    </selector>
</item>
</layer-list>